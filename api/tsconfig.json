{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "node",
        "lib": [
            "ES2020"
        ],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "noEmit": true,
        "resolveJsonModule": true,
        "allowJs": true,
        "baseUrl": ".",
        "paths": {
            "@/database": [
                "../database"
            ],
            "@/database/*": [
                "../database/*"
            ],
            "@/lib/types": [
                "../app/src/lib/types"
            ],
            "@/lib/*": [
                "../app/src/lib/*"
            ],
            "mysql2": [
                "./node_modules/mysql2"
            ],
            "mysql2/*": [
                "./node_modules/mysql2/*"
            ]
        },
        "typeRoots": [
            "./node_modules/@types",
            "../app/node_modules/@types"
        ]
    },
    "include": [
        "./types/**/*.d.ts",
        "./server.ts",
        "./middleware/**/*.ts",
        "./routes/**/*.ts",
        "../database/**/*.ts",
        "../app/src/lib/types.ts"
    ],
    "exclude": [
        "dist",
        "node_modules",
        "../app/node_modules",
        "../database/node_modules"
    ]
}