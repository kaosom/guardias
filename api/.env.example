# Base de datos MySQL
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=tu_password
MYSQL_DATABASE=guardias

# JWT — debe ser idéntico al de app/.env.local (mínimo 16 caracteres)
# Генерar con: openssl rand -base64 24
JWT_SECRET=una_clave_secreta_larga_y_segura

# Puerto del servidor Express
PORT=3001

# Ruta absoluta donde se guardan las fotos (fuera de app/)
UPLOAD_DIR=/ruta/absoluta/al/proyecto/private-uploads

# Origen permitido del frontend Next.js
FRONTEND_ORIGIN=https://localhost:3000
